---
import Layout from '../layouts/Layout.astro';
---
<Layout title="homepage">
  <div class="homepage">
    <section id="cover">
      <div id="cover-content">
        <div id="sticky-cover-container">
          <img class="cover-img" alt="car" src="/images/car.jpg">
          <img class="cover-img" alt="flower" src="/images/flower.jpg">
          <img class="cover-img" alt="vine" src="/images/vine.jpg">
          <div class="letter">H</div>
          <div class="letter">E</div>
          <div class="letter">L</div>
          <div class="letter">L</div>
          <div class="letter">O</div>
        </div>
      </div>
    </section>
    <section id="about">
      <div class="sub-section about visual">
        <div id="profile-blob">
          <img id="profile-img" alt="me" src="/images/cat.jpg">
        </div>
      </div>
      <div class="sub-section about desc">
        <div id="about-desc-content">
          <h2>About Me</h2>
          <p>This is a description about myself</p>
        </div>
      </div>
    </section>
    <section id="projects">
      <div class="sub-section projects desc">
      
      </div>
      <div class="sub-section projects visual">

      </div>
    </section>
    <section id="resume">

    </section>
  </div>
</Layout>


<style>
  .homepage {
    width: 90%;
    margin: auto;
    display: grid;
    grid-template-rows: calc(100vh - 11rem) repeat(3, 100vh);
  }

  section {
    border: .5rem solid black;
    border-left: none;
    border-right: none;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
  }

  #cover {
    display: flex;
    overflow-y: auto;
    -ms-overflow-style: none; /* for Internet Explorer, Edge */
    scrollbar-width: none; /* for Firefox */
  }

  #cover::-webkit-scrollbar {
    display: none; /* for Chrome, Safari, and Opera */
  }

  #cover-content {
    width: 100%;
    height: 200rem;
    position: relative;
  }
  #sticky-cover-container {
    position: sticky;
    width: 100%;
    height: calc(100vh - 11rem);
    top: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rem;
    font-family: 'Times New Roman', Times, serif;
  }
  #sticky-cover-container > img {
    width: 30rem;
    height: auto;
    position: absolute;
    top: calc((100vh - 11rem) * .5);
    z-index:-1;
    opacity: 0;
    transition: all .5s;
  }
  /* #sticky-cover-container > img:nth-of-type(1) {
    transform: translateX(20vw) translateY(calc((20vh - 11rem) * -1))
  }
  #sticky-cover-container > img:nth-of-type(2) {
    transform: translateX(-30vw) translateY(calc((30vh - 11rem) * -1))
  }
  #sticky-cover-container > img:nth-of-type(3) {
    transform: translateX(15vw) translateY(calc((40vh - 11rem) * 1))
  } */

  .sub-section {
    position: relative;
  }

  #about > .desc > div {
    padding: 20% 10%;
  }


  #profile-blob {
    width: 30rem;
    height: 30rem;
    border: .1rem solid transparent;
    border-radius: 100% 40% 20% 100% / 100% 100% 20% 40%;
    overflow: hidden;
    position: sticky;
    top: calc(11rem + 5rem);
    left: 0;
    right: 0;
    margin: 5rem auto;
    z-index: -1;
  }

  #profile-img {
    width: 100%;
    height: auto;
  }

  .about.visual {
    grid-column: 1 / 3;
  }

  .about.desc {
    grid-column: 3 / 6;
  }

  .projects.desc {
    grid-column: 1/ 4;
  }
  .projects.visual {
    grid-column: 4 / 6
  }
  

</style>