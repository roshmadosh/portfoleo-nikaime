---
import Layout from '../layouts/Layout.astro';
---
<Layout title="homepage">
  <div class="homepage">
    <section id="about">
      <div class="sub-section about visual">
        <img alt="me">
      </div>
      <div class="sub-section about desc">

      </div>
    </section>
    <section id="projects">
      <div class="sub-section projects desc">
      
      </div>
      <div class="sub-section projects visual">

      </div>
    </section>
    <section id="resume">

    </section>
  </div>
</Layout>


<style>
  .homepage {
    width: 90%;
    margin: auto;
    display: grid;
    grid-template-rows: repeat(3, 100vh);
  }

  section {
    border: .5rem solid black;
    border-left: none;
    border-right: none;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
  }

  .sub-section {
    border: 1px solid black;
  }
  .about.visual {
    grid-column: 1 / 3;
  }

  .about.desc {
    grid-column: 3 / 6;
  }

  .projects.desc {
    grid-column: 1/ 4;
  }
  .projects.visual {
    grid-column: 4 / 6
  }
  

</style>