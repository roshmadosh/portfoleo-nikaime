    width: .5rem;
    transform: rotateZ(45deg);
  }

  #react-logo.active #falling {
    background: white;
    z-index: 1;
    border: .1rem solid white;
    border-radius: 0;
    width: .5rem;
    transform: rotateZ(-45deg);
  }

  #react-logo.active #horizontal {
    border: .1rem solid transparent;
  } */

  #rising {
    transform: rotateY(45deg);
  }
  #falling {
    position: absolute;
    top: 0;
    left: 0;
    transform: rotateY(-45deg) rotateZ(90deg);
  }
  #horizontal {
    position: absolute;
    top: 0;
    left: 0;
    transform: rotateX(45deg) rotateZ(45deg);
  }

  #nucleus {
    position: absolute;
    margin: auto;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    text-align: center;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background: deepskyblue;
    transition: all 0.25s;
    cursor: pointer;
  }


</style>