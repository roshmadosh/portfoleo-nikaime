---
type ReactLogoProps = {
  size?: 'small' | 'large',
};

const { size } = Astro.props as ReactLogoProps;
---

<div id="react-logo">
  <div id="rising" class={`orbit`}></div>
  <div id="falling" class={`orbit`}></div>
  <div id="horizontal" class={`orbit`}></div>
  <div id="nucleus"></div>
</div>

<style>

  .orbit {
    border: .375rem solid deepskyblue;
    background: transparent;
    border-radius: 100% 25%;
    width: 5rem;
    height: 5rem;

    transition: all .5s;
  }

  #react-logo {
    position: relative;
    width: fit-content;
    height: fit-content;
    /* animation: spin 3s infinite linear; */
  }
  #nucleus.active{
    animation-name: move-nucleus;
    animation-duration: 1s;
    animation-iteration-count: 1;
  }
  @keyframes move-nucleus {
    0% { transform: scale(1); pointer-events: none }
    100% { transform: translateX(-45vw) translateY(45vh) scaleX(300) scaleY(300); opacity: 0; pointer-events: none }
  }

  /* #react-logo.active #rising {
    background: white;
    z-index: 1;
    border: .1rem solid white;
