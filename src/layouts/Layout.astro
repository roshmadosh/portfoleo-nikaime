---
import Header from '../components/Header.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en" data-scroll="0">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Yellowtail&display=swap" rel="stylesheet">
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<title>{title}</title>
  <script src="../js/scrollHandler.ts"></script>
  <script src="../js/themeHandler.js"></script>
  <script src="../js/navHandler.js"></script>
  <script src="../js/coverHandler.js"></script>
</head>
<body id="body">
  <Header />
  <main>
    <slot />
  </main>
</body>
</html>
<style>
  :root {
  --font-size-p: clamp(1.6rem, .833vw + 1.333rem, 2.4rem);
  --font-family: 'Yellowtail', cursive;
  --color-salmon: rgb(253, 60, 50);
  --color-rosered: #3B0918;
  }

  body {
    background: #eee;
    color: #222;
    box-sizing: border-box;
  }

  body.red {
    background: linear-gradient(to bottom, rgb(237, 151, 117), rgb(236, 171, 146),rgb(232, 199, 186));
    color: black;
  }

  body.black {
    background: linear-gradient(to bottom, rgb(32, 32, 32), rgb(47, 46, 46), rgb(66, 66, 66));
    color: yellow;
  }
  body.orange {
    background: linear-gradient(to bottom, rgb(90, 10, 251), rgb(102, 67, 241), rgb(176, 140, 248));
    color: white;
  }


  main {
    padding-top: 11rem;
  }

  :global(*) {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :global(html) {
    font-size: 62.5%;
    width: 100%;
    min-height: 100vh;
    font-family: var(--font-family);
  }

  :global(ul) {
    list-style: none;
  }

  :global(h1) {
    font-size: calc(3 * var(--font-size-p));
  }

  :global(h2) {
    font-size: calc(2 * var(--font-size-p));
  }

  :global(p, span, li, b) {
    font-size: var(--font-size-p);
  }

</style>
