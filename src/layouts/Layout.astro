---
import Header from '../components/Header.astro';
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en" data-scroll="0">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Amethysta&family=Prata&display=swap" rel="stylesheet">
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<title>{title}</title>
  <script src="../js/debounce.js"></script>
</head>
<body>
  <Header />
  <main>
    <slot />
  </main>
</body>
</html>

<style>
  :root {
  --font-size-p: clamp(1.6rem, .833vw + 1.333rem, 2.4rem);
  --font-family: 'Prata', serif;
  --font-family: 'Amethysta', serif;
  --color-salmon: rgb(	255, 83, 73);
  --color-rosered: #3B0918;
  }

  body {
    background: #eee;
    color: #222;
  }

  main {
    padding-top: 11rem;
  }

  :global(*) {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :global(html) {
    font-size: 62.5%;
    width: 100%;
    min-height: 100vh;
    font-family: var(--font-family);
  }

  :global(ul) {
    list-style: none;
  }

  :global(h1) {
    font-size: calc(2 * var(--font-size-p));
  }

  :global(p, span, li) {
    font-size: var(--font-size-p);
  }

</style>
